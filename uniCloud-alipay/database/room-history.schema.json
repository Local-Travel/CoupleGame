{
	"bsonType": "object",
	"required": ["room_num", "room_success_num"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"room_num": {
			"bsonType": "int",
			"description": "房间数量"
		},
		"room_invite_num": {
			"bsonType": "int",
			"description": "邀请房间数"
		},
		"room_success_num": {
			"bsonType": "int",
			"description": "发牌房间数"
		},
		"createTime": {
			"bsonType": "timestamp",
			"title": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"updateTime": {
			"bsonType": "date",
			"title": "更新时间"
		}
	},
	"version": "0.0.1"
}